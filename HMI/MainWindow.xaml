<Window x:Class="HMI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMI"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Window.Resources>
        <Style x:Key="bor" TargetType="Border">
            <Setter Property="Margin" Value="10" />
            <Setter Property="CornerRadius" Value="20" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Angle}" Value="1">
                    <DataTrigger.EnterActions>
                        <RemoveStoryboard BeginStoryboardName="one" />
                        <RemoveStoryboard BeginStoryboardName="two" />
                        <RemoveStoryboard BeginStoryboardName="three" />
                        <RemoveStoryboard BeginStoryboardName="four" />
                        <BeginStoryboard x:Name="one">
                            <Storyboard>
                                <DoubleAnimation
                                 Storyboard.TargetProperty="(Border.RenderTransform).Angle"
                                 From="0"
                                 To="-90"
                                 Duration="0:0:1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
                <DataTrigger Binding="{Binding Angle}" Value="2">
                    <DataTrigger.EnterActions>
                        <RemoveStoryboard BeginStoryboardName="one" />
                        <RemoveStoryboard BeginStoryboardName="two" />
                        <RemoveStoryboard BeginStoryboardName="three" />
                        <RemoveStoryboard BeginStoryboardName="four" />
                        <BeginStoryboard x:Name="two">
                            <Storyboard>
                                <DoubleAnimation
                                 Storyboard.TargetProperty="(Border.RenderTransform).Angle"
                                 From="-90"
                                 To="-180"
                                 Duration="0:0:1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
                <DataTrigger Binding="{Binding Angle}" Value="3">
                    <DataTrigger.EnterActions>
                        <RemoveStoryboard BeginStoryboardName="one" />
                        <RemoveStoryboard BeginStoryboardName="two" />
                        <RemoveStoryboard BeginStoryboardName="three" />
                        <RemoveStoryboard BeginStoryboardName="four" />
                        <BeginStoryboard x:Name="three">
                            <Storyboard>
                                <DoubleAnimation
                                 Storyboard.TargetProperty="(Border.RenderTransform).Angle"
                                 From="-180"
                                 To="-270"
                                 Duration="0:0:1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
                <DataTrigger Binding="{Binding Angle}" Value="4">
                    <DataTrigger.EnterActions>
                        <RemoveStoryboard BeginStoryboardName="one" />
                        <RemoveStoryboard BeginStoryboardName="two" />
                        <RemoveStoryboard BeginStoryboardName="three" />
                        <RemoveStoryboard BeginStoryboardName="four" />
                        <BeginStoryboard x:Name="four">
                            <Storyboard>
                                <DoubleAnimation
                                 Storyboard.TargetProperty="(Border.RenderTransform).Angle"
                                 From="-270"
                                 To="-360"
                                 Duration="0:0:1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="txt" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="30" />

        </Style>

    </Window.Resources>
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel
         Grid.Column="1"
         Margin="5"
         Background="AliceBlue"
         Orientation="Vertical">
            <TextBlock Margin="5" Text="上线产品" />
            <Separator />
            <ListBox ItemsSource="{Binding UpLine}" />
        </StackPanel>
        <StackPanel
         Grid.Column="3"
         Margin="5"
         Background="AliceBlue"
         Orientation="Vertical">
            <TextBlock Margin="5" Text="下线产品" />
            <Separator />
            <ListBox ItemsSource="{Binding DownLine}" />
        </StackPanel>
        <StackPanel Margin="0,20,0,20" Orientation="Vertical">
            <Button
             Command="{Binding FeedingCommand}"
             Content="上料"
             Cursor="Hand" />

        </StackPanel>
        <StackPanel  Margin="0 50" Grid.Column="2" Cursor="">


            <TextBlock
             Margin="5"
             FontSize="20"
             Text="{Binding Angle}" />

            <Grid>

                <Grid Width="300" Height="300">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RenderTransform>
                        <RotateTransform x:Name="giao" Angle="0" CenterX="150" CenterY="150" />
                    </Grid.RenderTransform>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Angle}" Value="1">
                                    <DataTrigger.EnterActions>
                                        <RemoveStoryboard BeginStoryboardName="one" />
                                        <RemoveStoryboard BeginStoryboardName="two" />
                                        <RemoveStoryboard BeginStoryboardName="three" />
                                        <RemoveStoryboard BeginStoryboardName="four" />
                                        <BeginStoryboard x:Name="one">
                                            <Storyboard>
                                                <DoubleAnimation
                                                 Storyboard.TargetProperty="(Grid.RenderTransform).Angle"
                                                 From="0"
                                                 To="90"
                                                 Duration="0:0:1" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Angle}" Value="2">
                                    <DataTrigger.EnterActions>
                                        <RemoveStoryboard BeginStoryboardName="one" />
                                        <RemoveStoryboard BeginStoryboardName="two" />
                                        <RemoveStoryboard BeginStoryboardName="three" />
                                        <RemoveStoryboard BeginStoryboardName="four" />
                                        <BeginStoryboard x:Name="two">
                                            <Storyboard>
                                                <DoubleAnimation
                                                 Storyboard.TargetProperty="(Grid.RenderTransform).Angle"
                                                 From="90"
                                                 To="180"
                                                 Duration="0:0:1" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Angle}" Value="3">
                                    <DataTrigger.EnterActions>
                                        <RemoveStoryboard BeginStoryboardName="one" />
                                        <RemoveStoryboard BeginStoryboardName="two" />
                                        <RemoveStoryboard BeginStoryboardName="three" />
                                        <RemoveStoryboard BeginStoryboardName="four" />
                                        <BeginStoryboard x:Name="three">
                                            <Storyboard>
                                                <DoubleAnimation
                                                 Storyboard.TargetProperty="(Grid.RenderTransform).Angle"
                                                 From="180"
                                                 To="270"
                                                 Duration="0:0:1" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Angle}" Value="4">
                                    <DataTrigger.EnterActions>
                                        <RemoveStoryboard BeginStoryboardName="one" />
                                        <RemoveStoryboard BeginStoryboardName="two" />
                                        <RemoveStoryboard BeginStoryboardName="three" />
                                        <RemoveStoryboard BeginStoryboardName="four" />
                                        <BeginStoryboard x:Name="four">
                                            <Storyboard>
                                                <DoubleAnimation
                                                 Storyboard.TargetProperty="(Grid.RenderTransform).Angle"
                                                 From="270"
                                                 To="360"
                                                 Duration="0:0:1" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Ellipse
                     Grid.RowSpan="3"
                     Grid.ColumnSpan="3"
                     Fill="#838486"
                     Opacity=".7" />
                    <Ellipse
                     Grid.Row="1"
                     Grid.Column="1"
                     Width="70"
                     Height="70"
                     Fill="Gray" />

                    <Border
                     Grid.Column="1"
                     Background="#787a00"
                     Cursor=""
                     Style="{StaticResource bor}">
                        <Border.RenderTransform>
                            <RotateTransform CenterX="40" CenterY="40" />
                        </Border.RenderTransform>
                        <TextBlock Style="{StaticResource txt}" Text="{Binding M03}" />
                    </Border>
                    <Border
                     Grid.Row="1"
                     Background="#787a00"
                     Style="{StaticResource bor}">
                        <TextBlock Style="{StaticResource txt}" Text="{Binding M04}" />
                        <Border.RenderTransform>
                            <RotateTransform CenterX="40" CenterY="40" />
                        </Border.RenderTransform>
                    </Border>
                    <Border
                     Grid.Row="2"
                     Grid.Column="1"
                     Background="#787a00"
                     Style="{StaticResource bor}">
                        <TextBlock Style="{StaticResource txt}" Text="{Binding M01}" />
                        <Border.RenderTransform>
                            <RotateTransform CenterX="40" CenterY="40" />
                        </Border.RenderTransform>
                    </Border>
                    <Border
                     Grid.Row="1"
                     Grid.Column="2"
                     Background="#787a00"
                     Style="{StaticResource bor}">
                        <TextBlock Style="{StaticResource txt}" Text="{Binding M02}" />
                        <Border.RenderTransform>
                            <RotateTransform CenterX="40" CenterY="40" />
                        </Border.RenderTransform>
                    </Border>
                </Grid>
                <Grid Width="300" Height="300">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="1" Margin="0,-30">
                        <TextBlock
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         FontSize="20"
                         Text="ST03" />
                    </Border>
                    <Border
                     Grid.Row="1"
                     Grid.Column="0"
                     Margin="-50,0">
                        <TextBlock
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         FontSize="20"
                         Text="ST02" />
                    </Border>
                    <Border
                     Grid.Row="1"
                     Grid.Column="2"
                     Margin="-50,0">
                        <TextBlock
                         HorizontalAlignment="Right"
                         VerticalAlignment="Center"
                         FontSize="20"
                         Text="ST04" />
                    </Border>
                    <Border
                     Grid.Row="2"
                     Grid.Column="1"
                     Margin="0,-30">
                        <TextBlock
                         HorizontalAlignment="Center"
                         VerticalAlignment="Bottom"
                         FontSize="20"
                         Text="ST01" />
                    </Border>
                    <Button
                     x:Name="myWidthAnimatedButton"
                     Grid.Row="1"
                     Width="100"
                     Margin="-50,0"
                     HorizontalAlignment="Left"
                     Content="视觉识别"
                     Visibility="Collapsed">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                         Storyboard.TargetName="myWidthAnimatedButton"
                                         Storyboard.TargetProperty="Width"
                                         From="100"
                                         To="150"
                                         Duration="0:0:3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                </Grid>
            </Grid>



        </StackPanel>
    </Grid>
</Window>
